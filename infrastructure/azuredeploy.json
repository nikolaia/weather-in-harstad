{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.4.1124.51302",
      "templateHash": "16547995315285937327"
    }
  },
  "parameters": {
    "webAppName": {
      "type": "string",
      "metadata": {
        "description": "The name of the web app that you wish to create."
      }
    },
    "serilogLogLevel": {
      "type": "string",
      "metadata": {
        "description": "The minimum loglevel for Serilog to push"
      }
    }
  },
  "variables": {
    "resourceGroupLocation": "[resourceGroup().location]",
    "appNameShort": "[substring(parameters('webAppName'), 0, 5)]",
    "keyVaultName_var": "[format('{0}-kv-{1}', variables('appNameShort'), uniqueString(resourceGroup().id))]",
    "sqlServerName_var": "[format('{0}-sql-{1}', variables('appNameShort'), uniqueString(resourceGroup().id))]",
    "sqlDatabaseName": "[format('{0}-db-{1}', variables('appNameShort'), uniqueString(resourceGroup().id))]",
    "sqlDatabaseAdminName": "weatherinharstad",
    "webappHostingPlanName": "[format('{0}-asp-{1}', variables('appNameShort'), uniqueString(resourceGroup().id))]",
    "sqlserverAdminLogin": "[format('l{0}', uniqueString(resourceGroup().id, '9A08DDB9-95A1-495F-9263-D89738ED4205'))]",
    "sqlserverAdminPassword": "[format('P{0}x!', uniqueString(resourceGroup().id, '224F5A8B-51DB-46A3-A7C8-59B0DD584A41'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-03-01",
      "name": "[variables('webappHostingPlanName')]",
      "location": "[variables('resourceGroupLocation')]",
      "sku": {
        "name": "S1",
        "tier": "Standard",
        "size": "1",
        "family": "S",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-03-01",
      "name": "[parameters('webAppName')]",
      "location": "[variables('resourceGroupLocation')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "name": "[parameters('webAppName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('webappHostingPlanName'))]",
        "siteConfig": {
          "http20Enabled": true,
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "Weather:StormSecretUri",
              "value": ""
            },
            {
              "name": "Serilog:MinimumLevel:Default",
              "value": "[parameters('serilogLogLevel')]"
            }
          ],
          "connectionstrings": {
            "WeatherSqlDb": {
              "type": "SQLAzure",
              "value": "[format('Data Source={0}.database.windows.net,1433;Database={1}', variables('sqlDatabaseName'), variables('sqlDatabaseName'))]"
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName_var'))]",
        "[resourceId('Microsoft.Web/serverfarms', variables('webappHostingPlanName'))]"
      ]
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2014-04-01-preview",
      "name": "[variables('sqlServerName_var')]",
      "location": "[variables('resourceGroupLocation')]",
      "properties": {
        "administratorLogin": "[variables('sqlserverAdminLogin')]",
        "administratorLoginPassword": "[variables('sqlserverAdminPassword')]"
      },
      "tags": {
        "displayName": "SQL Server"
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallrules",
      "apiVersion": "2014-04-01-preview",
      "name": "[format('{0}/{1}', variables('sqlServerName_var'), 'AllowAllWindowsAzureIps')]",
      "location": "[variables('resourceGroupLocation')]",
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName_var'))]"
      ]
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2014-04-01-preview",
      "name": "[format('{0}/{1}', variables('sqlServerName_var'), format('{0}', variables('sqlDatabaseName')))]",
      "location": "[variables('resourceGroupLocation')]",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "edition": "Standard",
        "maxSizeBytes": "1073741824",
        "requestedServiceObjectiveName": "S0"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName_var'))]"
      ]
    },
    {
      "type": "Microsoft.Sql/servers/administrators",
      "apiVersion": "2014-04-01-preview",
      "name": "[format('{0}/{1}', variables('sqlServerName_var'), 'activeDirectory')]",
      "location": "[variables('resourceGroupLocation')]",
      "properties": {
        "administratorType": "ActiveDirectory",
        "login": "[variables('sqlDatabaseAdminName')]",
        "sid": "[reference(format('Microsoft.Web/sites/{0}', parameters('webAppName')), '2016-03-01', 'Full').identity.principalId]",
        "tenantId": "[reference(format('Microsoft.Web/sites/{0}', parameters('webAppName')), '2016-03-01', 'Full').identity.tenantId]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName_var'))]",
        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2015-06-01",
      "name": "[variables('keyVaultName_var')]",
      "location": "[variables('resourceGroupLocation')]",
      "properties": {
        "sku": {
          "name": "standard",
          "family": "A"
        },
        "tenantId": "[reference(format('Microsoft.Web/sites/{0}', parameters('webAppName')), '2016-03-01', 'Full').identity.tenantId]",
        "accessPolicies": [
          {
            "tenantId": "[reference(format('Microsoft.Web/sites/{0}', parameters('webAppName')), '2016-03-01', 'Full').identity.tenantId]",
            "objectId": "[reference(format('Microsoft.Web/sites/{0}', parameters('webAppName')), '2016-03-01', 'Full').identity.principalId]",
            "permissions": {
              "keys": [
                "all"
              ],
              "secrets": [
                "all"
              ]
            }
          },
          {
            "tenantId": "[reference(format('Microsoft.Web/sites/{0}', parameters('webAppName')), '2016-03-01', 'Full').identity.tenantId]",
            "objectId": "4c3fb723-5571-47ec-b6b9-5771946a0338",
            "permissions": {
              "secrets": [
                "set",
                "list"
              ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
      ]
    }
  ]
}